<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mybanksystem">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyBankSystem">
        <activity android:name=".splash_screen"
            android:screenOrientation="portrait">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyBankSystem.NoActionBar">

        </activity>
        <activity android:name=".userdata" />
        <activity android:name=".transfer_history" />
        <activity android:name=".transfer_history_list" />
        <activity android:name=".select_user" />
        <activity android:name=".list" />
        <activity android:name=".HistoryList"
            android:screenOrientation="portrait"
            android:label="Transactions"
            android:theme="@style/Theme.MyBankSystem"/>
    </application>

</manifest>